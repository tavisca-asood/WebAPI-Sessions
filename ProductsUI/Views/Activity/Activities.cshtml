@model IEnumerable<ProductsUI.Models.ActivityProduct>

@{
    ViewBag.Title = "Activities";
}

<h2>Activities</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Booked)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Saved)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartTime)
        </td>
        <td>
            @{ if (item.Booked == false)
                {
                    @Html.ActionLink("Book", "Book", new { id = item.ID });
                }
                else
                {
                    @Html.ActionLink("Unbook", "Book", new { id = item.ID });
                }
            }

        </td>
        <td>
            @{ if (item.Saved == false)
                {
                    @Html.ActionLink("Save", "Save", new { id = item.ID });
                }
                else
                {
                    @Html.ActionLink("Unsave", "Save", new { id = item.ID });
                }
            }
        </td>
    </tr>
}

</table>
